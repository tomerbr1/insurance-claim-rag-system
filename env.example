# Copy this file to .env and fill in your API keys
# cp env.example .env

# ===========================================
# REQUIRED: OpenAI Configuration
# ===========================================

# OpenAI API Key (REQUIRED for main agents)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Main model for agents and routing
OPENAI_MODEL=gpt-4

# Cost-effective model for metadata extraction
OPENAI_MINI_MODEL=gpt-4o-mini

# Embedding model for vector indexes
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ===========================================
# REQUIRED: Google/Gemini Configuration
# ===========================================

# Google API Key (REQUIRED for unbiased evaluation)
# We use Gemini to evaluate OpenAI outputs to avoid self-evaluation bias
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-google-api-key-here

# Evaluation model (Gemini 2.0 Flash)
GEMINI_EVAL_MODEL=gemini-2.0-flash

# ===========================================
# Storage Configuration
# ===========================================

# ChromaDB Configuration
CHROMA_PERSIST_DIR=./chroma_db
CHROMA_COLLECTION_NAME=insurance_claims

# SQLite Metadata Store
METADATA_DB_PATH=./claims_metadata.db

# ===========================================
# Other Settings
# ===========================================

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
